<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar">
        <%= link_to "A&E Rideshare", root_path %>
        <div class="dropdown">
          <button class="dropbtn">Drivers</button>

          <div class="dropdown-content">
            <%= link_to "List Drivers", drivers_path %>
            <%= link_to "Add a Driver", new_driver_path %>
          </div>
        </div>

        <div class="dropdown">
          <button class="dropbtn">Passengers</button>

          <div class="dropdown-content">
            <%= link_to "List Passengers", passengers_path %>
            <%= link_to "Add a Passenger", new_passenger_path %>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
